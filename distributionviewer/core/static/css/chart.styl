@import 'lib';

$table-space = 45px;

.chart {
  margin-bottom: $table-space;
}

.chart-rollover-table {
  background-image: linear-gradient(90deg, #000 0%, #00224A 100%);
  border-radius: 0 4px 4px 0;
  bottom: $table-space * -1;
  color: $normal-text;
  visibility: hidden;
  font-size: 12px;
  position: absolute;
  right: $min-padding;
  width: $chart-preview-width - 60; // Chart Y-Axis padding.

  th, td {
    padding: 3px;
  }

  th {
    text-align: left;
    font-weight: normal;
  }

  td {
    text-align: right;
  }

  &.show {
    visibility: visible;
  }
}

// Hide MG clip path to allow chart lines close to max-y.
.mg-clip-path {
  display: none;
}

/* Dark Theme MG */
$chart-gray = rgba(255,255,255,0.6);
.chart {
  position: relative;

  .mg-x-axis line,
  .mg-y-axis line {
    stroke: $chart-gray;
  }
  .mg-line1-color {
    stroke: $mild-blue;
  }
  .mg-chart-title {
    stroke: none;
    fill: $normal-text;
    font-size: 15px;
    font-weight: 100;
  }
  .mg-x-axis,
  .mg-y-axis {
    text {
      fill: $chart-gray;
      font-size: 11px;
    }
  }
  .mg-area1-color {
    fill: $mild-blue;
  }
  .mg-header {
    font-size: inherit;
    transform: translate(0, 15px);
  }
  .mg-active-datapoint-container {
    fill: green;

    text {
      font-size: 11px;
      fill: $normal-text;
    }
  }
}
/* End Dark Theme MG */

/* d3 chart */
.axis {
  path,
  line {
    fill: none;
    stroke: $mild-blue;
  }
}
.line {
  fill: none;
  stroke: $mild-blue;
  stroke-width: 2px;
}
.tick {
  text {
    fill: $chart-gray;
    font-size: 12px;
  }
  line {
    opacity: 0.2;
  }
}
